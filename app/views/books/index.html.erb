
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>


</table>


<% @books.each do |book| %>
<%= book.title %>
<%= book.body %>
<%= link_to "Show", book_path(book) %>
<%= link_to "Edit", edit_book_path(book) %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
<% end %>

<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
 <% end %>
 </ul>
<% end %>


 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

</html>
